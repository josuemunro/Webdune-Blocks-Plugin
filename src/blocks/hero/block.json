{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "webdune/hero",
  "version": "1.0.0",
  "title": "Hero Section",
  "category": "webdune",
  "icon": "cover-image",
  "description": "Main hero section with heading, subheading, integrated phone search, and hero image.",
  "keywords": [
    "hero",
    "header",
    "banner",
    "homepage",
    "search"
  ],
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ],
    "spacing": {
      "padding": false,
      "margin": false
    },
    "anchor": true
  },
  "attributes": {
    "heading": {
      "type": "string",
      "default": "A better way to sell your phone"
    },
    "subheading": {
      "type": "string",
      "default": "Fast. Fair. Free. As it should be."
    },
    "heroImage": {
      "type": "object",
      "default": {}
    },
    "searchPlaceholder": {
      "type": "string",
      "default": "Enter phone model e.g. iPhone14"
    },
    "searchButtonText": {
      "type": "string",
      "default": "Get quote"
    },
    "gradientStart": {
      "type": "string",
      "default": "#52729b"
    },
    "gradientEnd": {
      "type": "string",
      "default": "#99a8b1"
    }
  },
  "textdomain": "webdune-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js"
}