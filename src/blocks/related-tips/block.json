{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "webdune/related-tips",
  "version": "1.0.0",
  "title": "Related Tips",
  "category": "webdune",
  "icon": "admin-links",
  "description": "Displays related Tips posts based on tags and categories",
  "keywords": ["tips", "related", "blog", "posts"],
  "supports": {
    "html": false,
    "anchor": true
  },
  "attributes": {
    "heading": {
      "type": "string",
      "default": "Related tips"
    },
    "postsCount": {
      "type": "number",
      "default": 3
    },
    "showButton": {
      "type": "boolean",
      "default": true
    },
    "buttonText": {
      "type": "string",
      "default": "All posts"
    },
    "buttonUrl": {
      "type": "string",
      "default": "/tips"
    }
  },
  "textdomain": "webdune-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css"
}

